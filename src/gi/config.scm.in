(define-module (gi config)
  #:export (gir-dir))

(define gir-search-path
  (make-parameter
   (or (getenv "GI_GIR_PATH") "@GI_GIR_DIR@")
   (lambda (path)
     (cond
      ((string? path) parse-path)
      ((list? path) path)
      (else (scm-error 'wrong-type-arg "%set-gir-search-path"
                       "expected list or string" '() (list path)))))))
